[
    {
        "name": "poca-webserver",
        "image": "poca/poca-2022:latest${IMAGE_DIGEST}",
        "memoryReservation": 950,
        "portMappings": [
            {
            "containerPort": 3000,
            "hostPort": 80,
            "protocol": "tcp"
            }
        ],
        "cpu": 1024,
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "eu-west-3",
                "awslogs-group": "poca-web",
                "awslogs-stream-prefix": "ecs-poca"
            }
        },
        "privileged": false,
        "environment": [
          {
            "name": "NODE_ENV",
            "value": "staging"
          },{
            "name": "DATABASE_HOST",
            "value": "${DB_HOST}"
          }
        ],
        "secrets": [{
            "name": "DATABASE_PASSWORD",
            "valueFrom": "arn:aws:ssm:eu-west-3:601086061783:parameter/database/password"
        }]
    }
]
